[alias]
	aliases = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\=\\/

  s = status -sb
  st = status
	staash = stash --all
	blaame = blame -wCCC
	l = log --oneline --decorate
	ll = log --oneline --graph --decorate
	lg = log --pretty=format:'%Cred%h%Creset %C(bold blue)%an%Creset  %Cgreen(%cr) -%C(yellow)%d%Creset %s' --abbrev-commit --date=relative
	rs = restore
	rss = restore --staged
	track = add --intent-to-add
	diff-inline = diff --color-words
	recover = !~/.config/git/recover.sh
[rerere]
	enabled = true
; [column]
; 	ui = auto
[branch]
	sort = -committerdate

